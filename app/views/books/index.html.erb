<div class="item-list">
  <div class="mdl-grid">
    <% @books.each do |book| %>

      <div class="mdl-cell mdl-cell--4-col mdl-cell--6-col-tablet">
        <div class="demo-card-square mdl-card mdl-shadow--2dp" style="max-width: 100%;">
          <div class="mdl-card__title mdl-card--expand" style="background: url(/assets/<%= book.photo_url %>); background-position: top; background-size: 100%; background-repeat: no-repeat;">
            <div class="go-to-button">
              <%= link_to book_path(id: book.id), class: "mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect" do %>
                <i class="material-icons">call_made</i>
              <% end %>
            </div>
          </div>
          <div class="mdl-card__supporting-text">
            <%= link_to book.title, book_path(id: book.id), style: "text-decoration: none; color: #212121;"%>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <small style="padding-left: 10px;">
              <%= number_to_currency(book.price) %>
            </small>
            <%= link_to book.author.full_name, book_path(id: book.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
