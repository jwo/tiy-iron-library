<div class="item-list">
  <% @books.each do |book| %>

    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand" style="background: url(/assets/<%= book.photo_url %>); background-position: center; background-size: 100%">
        <h2 class="mdl-card__title-text">
        </h2>
      </div>
      <div class="mdl-card__supporting-text">
        <%= link_to book.title, book_path(id: book.id), style: "text-decoration: none; color: #212121" %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <small style="padding-left: 10px;">
          <%= number_to_currency(book.price) %>
        </small>
        <%= link_to book.author.full_name, book_path(id: book.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>
  <% end %>

</div>
